{% extends 'base.html.twig' %}

{% block title %}Hello ViewActorsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class='container'>
		<h1 class='text-center mb-5 mt-5 text-uppercase'>{{actor.lastName}} {{actor.firstName}}</h1>
		<div class='row d-flex justify-content-center'>
				<div class='col-lg-6 me-3 mb-5 text-center'>
					<div class="card">
						<img src="https://cdn.britannica.com/92/215392-050-96A4BC1D/Australian-actor-Chris-Hemsworth-2019.jpg" class="card-img-top" alt="...">
						<div class="card-body">
                            <p class="card-text">Date de naissance: {{actor.dateOfBirth|date('d/m/Y')}}</p>
                            <p class="card-text">Début de carrière: {{actor.startCareerAt|date('d/m/Y')}}</p>
                            <p class="card-text">A joué dans: 
                            {% for item in movies %} <a href="/view/movie/{{item.id}}">{{item.title}}</a> {% if loop.last != true %} / {% endif %} {% endfor %}
                            </p>
						</div>
					</div>
				</div>
		</div>
        <div class="d-flex justify-content-center mb-5">
        <a href="/view/movie/{{returnMovieId}}" class="btn btn-warning">Retour au film</a>
        </div>
	</div>
{% endblock %}
