{% extends 'base.html.twig' %}

{% block title %}Hello ListMoviesController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>


	<div class='container'>
		<h1 class='text-center mb-5 mt-5'>TOUS LES FILMS</h1>
		<div class='row d-flex justify-content-center'>
			{% for item in movies %}
				<div class='col-lg-3 me-3 mb-5 text-center'>
					<div class="card">
						<img src="{{item.imageUrl}}" class="card-img-top" alt="...">
						<div class="card-body">
							<h5 class="card-title text-uppercase">
								<b>{{item.title}}</b>
							</h5>
							<p class="card-text">{{item.director.firstName}}
								{{item.director.lastName}}</p>
							<a href="/view/movie/{{item.id}}" class="btn btn-warning">Voir en d√©tail</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
