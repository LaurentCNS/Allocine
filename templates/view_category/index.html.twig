{% extends 'base.html.twig' %}

{% block title %}Hello ViewCategoryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class='container'>
		<h1 class='text-center mb-5 mt-5'>Films pour le genre {{category.label}} </h1>
		<div class='row d-flex justify-content-center'>
			{% for item in movies %}
				<div class='col-lg-2 me-3 mb-5 text-center'>
					<div class="card">
						<img src="{{item.imageUrl}}" class="card-img-top" alt="...">
						<div class="card-body">
							<p class="card-title text-uppercase">
								<b>{{item.title}}</b>
							</p>
							<a href="/view/movie/{{item.id}}" class="btn btn-warning">Voir en d√©tail</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
        <div class="d-flex justify-content-center mb-5">
			<a href="/view/movie/{{returnMovieId}}" class="btn btn-warning">Retour au film</a>
		</div>
	</div>

{% endblock %}
